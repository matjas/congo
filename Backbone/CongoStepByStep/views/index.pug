extends layout.pug

block content
  #app.row
    .span12
      ul#nav.breadcrumb

    #details
    
  script#db-details-template(type="text/backbone")
    .row
      .span12
        #database-list.span8
        #database-options.span3
      
  script#new-db-template(type="text/backbone")
    form#addDb
        input(id="newDb", type="text")
        button.btn(type="submit")
          i.icon.icon-plus-sign
          | Add Db

  script#database-list-template(type="text/backbone")
    td(width=60)
      img(src="img/collections.png", style="height:24px")
    td
      h4
        a(href="#") <%=name%>
    td
      button.btn.delete-collection
        i.icon.icon-remove
        | delete

  script(src="/javascripts/congo/index.js")
  script(src="/javascripts/congo/base.js")
  script(src="/javascripts/congo/nav.js")
  script(src="/javascripts/congo/database.js")

  script.
    $(function(){
      Congo.init();
    })